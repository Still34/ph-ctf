<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Waiter</title>
    <link rel="stylesheet" href="~/lib/spectre/spectre.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="container grid-xl py-2">
        <nav class="navbar">
            <section class="navbar-section">
                <a class="navbar-brand mr-2" asp-area="" asp-controller="Home" asp-action="Index">Waiter</a>
                <a class="btn btn-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </section>
        </nav>
    </header>
    <div class="container grid-lg py-2">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
